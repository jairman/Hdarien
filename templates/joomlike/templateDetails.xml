	<files>
		<filename>CHANGELOG.txt</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_thumbnail.png</filename> 
		<filename>template_preview.png</filename> 
		<folder>admin</folder>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>javascript</folder>
		<folder>language</folder>
		<folder>layout</folder>
		<folder>lib</folder>
	</files>

	<languages folder="language"> 
		<language tag="en-GB">en-GB/en-GB.tpl_joomlike.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_joomlike.sys.ini</language>
		<language tag="de-DE">de-DE/de-DE.tpl_joomlike.ini</language>
		<language tag="de-DE">de-DE/de-DE.tpl_joomlike.sys.ini</language>
	</languages>

	<positions>
		<position>article</position>
		<position>breadcrumbs</position>
		<position>footer</position>
		<position>footer-nav</position>
		<position>header</position>
		<position>contentleft</position>
		<position>contentright</position>
		<position>content-top1</position>
		<position>content-top2</position>
		<position>content-bottom1</position>
		<position>content-bottom2</position>
		<position>left-top</position>
		<position>left-1</position>
		<position>left-2</position>
		<position>left-bottom</position>
		<position>login</position>
		<position>logo</position>
		<position>mainmenu</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>position-15</position>
		<position>position-16</position>
		<position>right-top</position>
		<position>right-1</position>
		<position>right-2</position>
		<position>right-bottom</position>
		<position>search</position>
		<position>submenu</position>
		<position>topmenu</position>
	</positions>
	 
	<config>
		<fields name="params">
			<fieldset name="basic">
			 		 
				<field name="colorVariation" type="list" default="blue" label="TPL_JOOMLIKE_TEMPLATESTYLE" description="TPL_JOOMLIKE_TEMPLATESTYLE_DESC">
					<option value="blue">TPL_JOOMLIKE_BLUE</option>
					<option value="red">TPL_JOOMLIKE_RED</option>
					<option value="green">TPL_JOOMLIKE_GREEN</option>
					<option value="dark">TPL_JOOMLIKE_DARK</option>
					<option value="light">TPL_JOOMLIKE_LIGHT</option>
				</field>
				<field name="templateWidth" type="text" default="920px" label="TPL_JOOMLIKE_TEMP_WIDTH" description="TPL_JOOMLIKE_TEMP_WIDTH_DESC" />
				<field name="sidebarWidth" type="text" default="25" label="TPL_JOOMLIKE_SIDEBAR_WIDTH" description="TPL_JOOMLIKE_SIDEBAR_WIDTH_DESC" />
				<field name="cellpadding" type="text" default="0.5em" label="TPL_JOOMLIKE_CELLPADDING" description="TPL_JOOMLIKE_CELLPADDING_DESC" />
				<field name="bootstrap" label="Bootstrap 3.1.1" description="" type="list" default="1" >
					<option value="0">JNO</option>
					<option value="1">JYES</option> 
				</field>
				<field type="spacer" />
				<field name="backgroundcolor" label="TPL_JOOMLIKE_BGCOLOR" type="color" ></field>
				<field name="background" label="TPL_JOOMLIKE_BGIMAGE" type="media" directory="stories" /> 
				<field name="containercolor" label="TPL_JOOMLIKE_CONTAINERCOLOR" type="color"  description="TPL_JOOMLIKE_CONTAINERCOLOR_DESC"></field>

			</fieldset>
			
			
			<fieldset name="TPL_JOOMLIKE_TYPO">
				<field name="googleFont" type="list" default="1" label="Google Font">
					<option value="0">JNO</option>
					<option value="1">JYES</option> 
				</field>
				<field name="googleFontFamily" type="text" default="Carrois Gothic" label="&lt;b&gt;h3&lt;/b&gt; - Google Font Family" description=""></field>
				
				<field type="spacer" />
				<field name="fontfamily" type="text" default="Helvetica, Arial, sans-serif" label="TPL_JOOMLIKE_FONTFAMILY" description="TPL_JOOMLIKE_FONTFAMILY_DESC"></field>
				<field name="fontsize" type="text" default="14px" label="TPL_JOOMLIKE_FONTSIZE" description="TPL_JOOMLIKE_FONTSIZE_DESC"></field>
				<field name="fontcolor" type="color" label="TPL_JOOMLIKE_FONTCOLOR" description="TPL_JOOMLIKE_FONTCOLOR_DESC" />
				<field name="linkcolor" type="color" label="TPL_JOOMLIKE_LINKCOLOR" default="#6699CC" description="TPL_JOOMLIKE_LINKCOLOR_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="backlink" label="TPL_JOOMLIKE_BACKLINK" description="TPL_JOOMLIKE_BACKLINK_DESC" type="list" default="1" >
					<option value="1">TPL_JOOMLIKE_SHOW</option>
					<option value="2">TPL_JOOMLIKE_HIDE</option> 
				</field>
			</fieldset>
		</fields>
	</config>
</extension>